@charset "UTF-8";

*
  padding 0
  margin 0

.txC
  text-align center

.none
  display none

 .index_header
    p
        color #ddd

// 各ページの親要素にページを分類するclassを作成する
.ago_header
    p
        font-size 50px
        color red

#main_wrap
  width 100%
  height 100%
  background #0ff
  position relative
  .h1_wrap
    font-size 10vw
    padding 10% 0
  .user_wrap
    font-size 3vw
    padding 4% 0 0
  .connect
    display block
    text-decoration none
    color #fff
    width 60%
    margin 5% auto 0
    padding 3%
    border-radius 100px
    background #00f
    font-size 6vw
    cursor pointer
    box-sizing border-box
  //page2
  .char_set
    height 100%
    box-sizing border-box
    .result_wrap
      width 100%
      background #fff
      text-align center
      position relative
      > div
        display table
        width 90%
        margin 0 auto 5%
        font-size 10vw
  .btn_wrap
    display table
    width 90%
    margin 0 auto
    button
      display inline-block
      margin 0 7% 2% 0
      padding 8%
      cursor pointer
      font-size 4vw
      color #000
      background #fff
      box-sizing border-box
      &:last-child
        margin 0 0 2%
